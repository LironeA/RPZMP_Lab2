<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="WarehouseApp.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:WarehouseApp"
       xmlns:views="clr-namespace:WarehouseApp.Views"
       Shell.FlyoutBehavior="Flyout"
       Title="WarehouseApp">

    <ShellContent Title="Products"
                  ContentTemplate="{DataTemplate views:ProductsPage}"
                  Route="Products" />

    <ShellContent Title="AboutPage"
                  ContentTemplate="{DataTemplate views:AboutPage}"
                  Route="AboutPage" />

</Shell>
